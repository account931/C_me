<?xml version="1.0" encoding="utf-8"?> 
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bground"
    android:divider="?android:dividerHorizontal"
    android:orientation="vertical"
    android:showDividers="middle" >

<LinearLayout
    android:id="@+id/linearLayout2"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    android:layout_marginLeft="0pt"
    android:layout_marginRight="0pt"
    android:layout_marginTop="3pt"
    android:orientation="horizontal"  > 

    <EditText
        android:id="@+id/INETeditText"
        android:layout_width="196dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter WWW" 
        android:textColorHint="#000000">

    <requestFocus />  
</EditText>

<Button
    android:id="@+id/INETME"
    android:layout_width="109dp"
    android:layout_height="wrap_content"
    android:text="INET"
    android:textSize="8pt" />
</LinearLayout>







<!-- CALL -->
<LinearLayout
    android:id="@+id/linearLayout3"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    android:layout_marginLeft="0pt"
    android:layout_marginRight="0pt"
    android:layout_marginTop="3pt"
    android:orientation="horizontal"  > 

    <EditText
        android:id="@+id/CALLeditText"
        android:layout_width="196dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Number" 
        android:textColorHint="#000000">

     <requestFocus /> 
</EditText>

<Button
    android:id="@+id/CALLMe"
    android:layout_width="109dp"
    android:layout_height="wrap_content"
    android:text="Call"
    android:textSize="8pt" />
</LinearLayout>
<!-- CALL END-->






<!-- SMS SEND -->
<LinearLayout
    android:id="@+id/linearLayoutSMS"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    android:layout_marginLeft="0pt"
    android:layout_marginRight="0pt"
    android:layout_marginTop="3pt"
    android:orientation="vertical"  > 

    
    
    <LinearLayout
    android:id="@+id/linearLayoutAdr"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    android:layout_marginLeft="0pt"
    android:layout_marginRight="0pt"
    android:layout_marginTop="3pt"
    android:orientation="horizontal"  > 
    
    <EditText
        android:id="@+id/editTextSMS"
        android:layout_width="186dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="To (Number)"
        android:textColorHint="#000000" >

    <requestFocus /> 
</EditText>

    <ImageButton
    android:id="@+id/imageButtonAdrBook"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/adrbooks"
    android:layout_marginLeft="8pt" 
    />
</LinearLayout>
    
<!-- android:onClick="pickPhone" -->
    
    
    
    
    
    
    
    
    
<EditText
        android:id="@+id/editTextSMSTO"
        android:layout_width="186dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Type SMS Text"
        android:textColorHint="#000000" >

    <requestFocus /> 
</EditText>

<!-- Layout  button sendsms and  e-mail -->
<LinearLayout
    android:id="@+id/linearLayout5"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    android:layout_marginLeft="0pt"
    android:layout_marginRight="0pt"
    android:layout_marginTop="3pt"
    android:orientation="horizontal"  > 
<Button
    android:id="@+id/SMSME"
    android:layout_width="109dp"
    android:layout_height="wrap_content"
    android:text="Send"
    android:textSize="8pt" />



<ImageButton
    android:id="@+id/imageButtonMail"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/mailr"
    android:layout_marginLeft="58pt" />
</LinearLayout>  <!-- END Layout  button sendsms and  e-mail -->



</LinearLayout>
<!-- END SMS SEND -->




<WebView  
    android:id="@+id/webview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
/>


</LinearLayout>

 