<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/chat"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.c_me.ChatInsertM" >

   
 <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add to Chat" />

    <EditText
        android:id="@+id/editUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="22dp"
        android:ems="10" 
        android:hint="Your Name"
        android:textColorHint="#000000">

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/editMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editUser"
        android:layout_below="@+id/editUser"
        android:layout_marginTop="42dp"
        android:ems="10" 
        android:hint="Your Message"
        android:textColorHint="#000000"/>

    <Button
        android:id="@+id/buttonInsert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editMessage"
        android:layout_below="@+id/editMessage"
        android:layout_marginTop="66dp"
        android:text="Say IT" />
    
    
    <!-- PREFERANCES LOAD -->
    <LinearLayout
    android:id="@+id/linearLayoutPref"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    android:layout_marginLeft="0pt"
    android:layout_marginRight="0pt"
    android:layout_marginTop="133pt"
    android:orientation="horizontal"  > 
     <Button
        android:id="@+id/buttonLoadPref"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editMessage"
        android:layout_below="@+id/editMessage"
        
        android:text="Load" />
     
       <Button
        android:id="@+id/buttonClear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editMessage"
        android:layout_below="@+id/editMessage"
        
        android:text="Clear" />
       </LinearLayout>
    <!-- END PREF -->

</RelativeLayout>